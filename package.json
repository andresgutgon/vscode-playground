{
  "name": "latitude-vscode",
  "displayName": "latitude-vscode",
  "description": "The official VSCode extension for Latitude data projects",
  "version": "0.0.1",
  "categories": [
    "Data Science",
    "Productivity",
    "Data Engineering",
    "Data Analysis",
    "Data Visualization",
    "Data as code"
  ],
  "engines": {
    "vscode": "^1.74.0"
  },
  "extensionKind": [
    "ui",
    "workspace"
  ],
  "activationEvents": [
    "onWebviewPanel:catCoding"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "views": {
      "explorer": [
        {
          "type": "webview",
          "id": "latitude-vscode.colorsView",
          "name": "COLORINES"
        }
      ]
    },
    "commands": [
      {
        "command": "latitude-vscode.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "latitude-vscode.addColor",
        "category": "Colorines",
        "title": "Add Color"
      },
      {
        "command": "latitude-vscode.clearColors",
        "category": "Colorines",
        "title": "Clear Colors",
        "icon": "$(clear-all)"
      },
      {
        "command": "latitude-vscode.startCatCodingSession",
        "title": "Start cat coding session",
        "category": "Cat Coding"
      },
      {
        "command": "latitude-vscode.doRefactor",
        "title": "Do some refactoring",
        "category": "Cat Coding"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "latitude-vscode.clearColors",
          "group": "navigation",
          "when": "view == latitude-vscode.colorsView"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "pnpm run compile && pnpm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.86.0",
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@typescript-eslint/eslint-plugin": "^6.19.1",
    "@typescript-eslint/parser": "^6.19.1",
    "eslint": "^8.56.0",
    "typescript": "^5.3.3",
    "@vscode/test-cli": "^0.0.4",
    "@vscode/test-electron": "^2.3.9"
  }
}
